<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpdateApp.MainPage">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="urlEntry" Placeholder="Enter update URL" />
        <Button Text="Update" Clicked="OnUpdateClicked" />
        <ProgressBar x:Name="downloadProgressBar" IsVisible="False" />
        <Label x:Name="statusLabel" Text="Status: Waiting" />
    </VerticalStackLayout>

</ContentPage>
